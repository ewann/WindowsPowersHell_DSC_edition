    "InstanceWindows01": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "\n",
              [
                "<powershell>",
                "Set-ExecutionPolicy unrestricted -force",
                "iex ((New-Object System.Net.WebClient).DownloadString('https://chocolatey.org/install.ps1'))",
                "choco install powershell -y;",
                "choco install git -y",
                "#this one is seems to be a performance trainwreck: choco install openssh -y",
                "choco install mls-software-openssh -y",
                "pushd c:\\",
                "start-process -FilePath 'C:\\Program Files\\Git\\bin\\git.exe' -ArgumentList 'clone https://github.com/ewann/WindowsPowersHell_DSC_edition.git/' -wait",
                { "Fn::Sub": "git checkout ${RepoBranchSource}" },
                "iex c:\\WindowsPowersHell_DSC_edition\\Powershell\\Schedule-WFJob.ps1",
                "shutdown -r -t 5 -f #iex c:\\WindowsPowersHell_DSC_edition\\Powershell\\Invoke-WFJob.ps1",
                "</powershell>"
              ]
            ]
          }
        },
        "InstanceType": {
          "Ref": "InstanceType"
        },
        "ImageId": {
          "Fn::FindInMap": [
            "AWSRegionArch2AMIwindows",
            {
              "Ref": "AWS::Region"
            },
            {
              "Fn::FindInMap": [
                "AWSInstanceType2Arch",
                {
                  "Ref": "InstanceType"
                },
                "Arch"
              ]
            }
          ]
        },
        "KeyName": {
          "Ref": "KeyName"
        },
        "NetworkInterfaces": [
          {
            "AssociatePublicIpAddress": "True",
            "DeleteOnTermination": "True",
            "SubnetId": {
              "Ref": "SubnetWPHinternetFacing01"
            },
            "DeviceIndex": "0",
            "GroupSet": [
              {
                "Ref": "SecurityGroupAllowRDPinbound"
              }
            ]
          }
        ]
      },
      "Metadata": {
        "AWS::CloudFormation::Designer": {
          "id": "7c4caf54-dd7c-41ae-b21f-404700fd48c8"
        }
      },
      "DependsOn": [
        "PublicRouteSubnetWPHinternetFacing01"
      ]
    },
    "InstanceLinux01": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "\n",
              [
                "#!/bin/bash",
                "apt-get update",
                "apt-get upgrade -y",
                "apt-get install git -y",
                "curl -L https://omnitruck.chef.io/install.sh | sudo bash",
                "git clone 'https://github.com/ewann/WindowsPowersHell_DSC_edition.git/'",
                "cd WindowsPowersHell_DSC_edition",
                { "Fn::Sub": "git checkout ${RepoBranchSource}" },
                "chef-client -z -o powershell",
                "chef-client -z -o dotNETcore",
                "apt-get update",
                "apt-get upgrade -y",
                "echo 'root:root' | chpasswd",
                "reboot"
              ]
            ]
          }
        },
        "InstanceType": {
          "Ref": "InstanceType"
        },
        "ImageId": {
          "Fn::If": [
              "UbuntuReleaseCondition1604",
              { "Fn::FindInMap": [
                    "AWSRegionArch2AMIubuntu1604",
                    {
                        "Ref": "AWS::Region"
                    },
                    {
                        "Fn::FindInMap": [
                            "AWSInstanceType2Arch",
                            {
                                "Ref": "InstanceType"
                            },
                            "Arch"
                        ]
                    }
              ]},
              { "Fn::FindInMap": [
                    "AWSRegionArch2AMIubuntu1404",
                    {
                        "Ref": "AWS::Region"
                    },
                    {
                        "Fn::FindInMap": [
                            "AWSInstanceType2Arch",
                            {
                                "Ref": "InstanceType"
                            },
                            "Arch"
                        ]
                    }
               ]}
          ]
        },
        "KeyName": {
          "Ref": "KeyName"
        },
        "NetworkInterfaces": [
          {
            "AssociatePublicIpAddress": "True",
            "DeleteOnTermination": "True",
            "SubnetId": {
              "Ref": "SubnetWPHinternetFacing01"
            },
            "DeviceIndex": "0",
            "GroupSet": [
              {
                "Ref": "SecurityGroupAllowSSHinbound"
              },
              {
                "Ref": "SecurityGroupWinRMinbound"
              }
            ]
          }
        ]
      },
